---
import Card from '@/components/ui/Card.astro'
import CardContent from '@/components/ui/CardContent.astro'
import { ExternalLink } from 'lucide-astro'

export interface Props {
  name: string
  url: string
  description: string
}

const { name, url, description } = Astro.props
---

<a
  href={url}
  target={url.startsWith('http') ? '_blank' : undefined}
  rel={url.startsWith('http') ? 'noopener noreferrer' : undefined}
  class="block"
>
  <Card class="hover:shadow-lg transition-shadow cursor-pointer h-full">
    <CardContent class="p-6">
      <div class="flex items-start justify-between mb-3">
        <h3 class="font-semibold text-lg">{name}</h3>
        <ExternalLink class="h-4 w-4 text-muted-foreground flex-shrink-0 ml-2" />
      </div>
      <p class="text-sm text-muted-foreground mb-4">
        {description}
      </p>
      <div class="inline-flex items-center text-sm font-medium text-primary">
        {url.startsWith('mailto:') ? 'Contact' : 
         url.startsWith('http') ? 'Visit' : 'View'}
        â†’
      </div>
    </CardContent>
  </Card>
</a>