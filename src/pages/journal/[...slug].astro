---
import { type CollectionEntry, getCollection } from 'astro:content'
import BaseLayout from '@/layouts/BaseLayout.astro'
import Badge from '@/components/ui/Badge.astro'
import TableOfContents from '@/components/TableOfContents.astro'
import SocialShare from '@/components/SocialShare.astro'
import { formatDate } from '@/lib/utils'

export async function getStaticPaths() {
  const posts = await getCollection('blog')
  return posts.map(post => ({
    params: { slug: post.slug },
    props: post,
  }))
}

type Props = CollectionEntry<'blog'>

const post = Astro.props
const { Content, headings } = await post.render()

// Default Article schema - always present for SEO
const defaultArticleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": post.data.title,
  "description": post.data.description,
  "author": {
    "@type": "Person",
    "name": post.data.author,
    "url": "https://gokhanturhan.com"
  },
  "publisher": {
    "@type": "Person",
    "name": "Gökhan Turhan",
    "url": "https://gokhanturhan.com"
  },
  "datePublished": post.data.publishDate.toISOString(),
  "url": `https://gokhanturhan.com/journal/${post.slug}/`,
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://gokhanturhan.com/journal/${post.slug}/`
  },
  "image": post.data.heroImage ? `https://gokhanturhan.com${post.data.heroImage}` : "https://gokhanturhan.com/og-default.png",
  "articleSection": post.data.category,
  "keywords": post.data.tags?.join(', ') || ''
}

// Additional custom schema from frontmatter (if any)
const customSchemas = post.data.schema ? (Array.isArray(post.data.schema) ? post.data.schema : [post.data.schema]) : []

// Check if we have enough headings to show TOC
const showToc = headings.filter(h => h.depth === 2 || h.depth === 3).length >= 3
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  type="article"
  image={post.data.heroImage || `/og/${post.slug}.png`}
>
  {/* Default Article Schema - always present */}
  <script type="application/ld+json" set:html={JSON.stringify(defaultArticleSchema)} slot="head" />
  
  {/* Additional custom schemas from frontmatter */}
  {customSchemas.map((schema: any) => (
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      ...schema
    })} slot="head" />
  ))}

  {/* Additional meta keywords for LLM discoverability */}
  {post.data.seoKeywords && (
    <meta name="keywords" content={post.data.seoKeywords.join(', ')} slot="head" />
  )}

  <div class="mx-auto max-w-6xl px-6 py-8 lg:py-12">
    <div class={`${showToc ? 'lg:grid lg:grid-cols-[220px_1fr] lg:gap-12' : ''}`}>
      
      {/* Table of Contents - Desktop Left Sidebar */}
      {showToc && (
        <aside class="hidden lg:block">
          <TableOfContents headings={headings} />
        </aside>
      )}

      {/* Main Content */}
      <article class="max-w-2xl mx-auto lg:mx-0">
        <!-- Article Header -->
        <header class="mb-10">
          {post.data.heroImage && (
            <img
              src={post.data.heroImage}
              alt={post.data.heroImageAlt || post.data.title}
              class="w-full rounded-lg mb-8"
              loading="eager"
            />
          )}

          <div class="space-y-4">
            <!-- Meta Info -->
            <div class="flex items-center gap-3 text-sm text-muted-foreground">
              <time datetime={post.data.publishDate.toISOString()}>
                {formatDate(post.data.publishDate)}
              </time>
              <span>·</span>
              <a 
                href={`/archive/categories/${post.data.category.toLowerCase().replace(/\s+/g, '-').replace(/&/g, 'and')}`}
                class="hover:text-foreground transition-colors"
              >
                {post.data.category}
              </a>
            </div>

            <!-- Title -->
            <h1 class="text-3xl md:text-4xl font-semibold tracking-tight text-foreground leading-tight">
              {post.data.title}
            </h1>

            <!-- Description -->
            {post.data.description && (
              <p class="text-lg text-muted-foreground leading-relaxed">
                {post.data.description}
              </p>
            )}

            <!-- Tags -->
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="flex flex-wrap gap-2 pt-2">
                {post.data.tags.map(tag => (
                  <a 
                    href={`/archive/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                    class="text-xs text-muted-foreground hover:text-foreground transition-colors"
                  >
                    #{tag}
                  </a>
                ))}
              </div>
            )}
          </div>
        </header>

        {/* Mobile TOC */}
        {showToc && (
          <div class="lg:hidden mb-8 p-4 bg-muted/30 rounded-lg">
            <details>
              <summary class="text-sm font-medium text-muted-foreground cursor-pointer">
                Table of Contents
              </summary>
              <nav class="mt-3">
                <ul class="space-y-2">
                  {headings.filter(h => h.depth === 2 || h.depth === 3).map((heading) => (
                    <li class={heading.depth === 3 ? 'pl-4' : ''}>
                      <a 
                        href={`#${heading.slug}`}
                        class="text-sm text-muted-foreground hover:text-foreground transition-colors"
                      >
                        {heading.text}
                      </a>
                    </li>
                  ))}
                </ul>
              </nav>
            </details>
          </div>
        )}

        <!-- Article Content -->
        <div class="prose prose-lg prose-neutral dark:prose-invert max-w-none prose-headings:font-semibold prose-headings:tracking-tight prose-a:text-foreground prose-a:underline prose-a:decoration-1 prose-a:underline-offset-2 hover:prose-a:decoration-2 prose-p:text-foreground/90 prose-li:text-foreground/90 prose-blockquote:border-l-2 prose-blockquote:border-muted-foreground/30 prose-blockquote:pl-4 prose-blockquote:italic prose-blockquote:text-muted-foreground prose-code:text-sm prose-code:bg-muted/50 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:before:content-none prose-code:after:content-none prose-pre:bg-muted/30 prose-pre:border prose-pre:border-border">
          <Content />
        </div>

        <!-- Social Share -->
        <div class="mt-12 pt-8 border-t border-border">
          <SocialShare 
            title={post.data.title}
            url={`${Astro.site?.origin || 'https://gokhanturhan.com'}${Astro.url.pathname}`}
            description={post.data.description}
          />
        </div>

        <!-- Article Footer -->
        <footer class="mt-8 pt-8 border-t border-border">
          <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 text-sm text-muted-foreground">
            <span>
              Published on {formatDate(post.data.publishDate)}
            </span>
            <div class="flex items-center gap-6">
              <a
                href="/journal"
                class="hover:text-foreground transition-colors"
              >
                ← All posts
              </a>
              <a
                href="/rss.xml"
                class="hover:text-foreground transition-colors"
              >
                RSS
              </a>
            </div>
          </div>
        </footer>
      </article>
    </div>
  </div>
</BaseLayout>

<style>
  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4),
  .prose :global(h5),
  .prose :global(h6) {
    scroll-margin-top: 5rem;
  }

  /* Anchor link styles */
  .prose :global(h1 a.anchor-link),
  .prose :global(h2 a.anchor-link),
  .prose :global(h3 a.anchor-link),
  .prose :global(h4 a.anchor-link),
  .prose :global(h5 a.anchor-link),
  .prose :global(h6 a.anchor-link) {
    text-decoration: none !important;
    color: inherit;
  }

  .prose :global(h2),
  .prose :global(h3) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .prose :global(p + p) {
    margin-top: 1.25rem;
  }
</style>
