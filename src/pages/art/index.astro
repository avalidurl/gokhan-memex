---
import BaseLayout from '@/layouts/BaseLayout.astro'
---

<BaseLayout
  title="Art"
  description="Creative works and artistic explorations."
>
  <div class="mx-auto max-w-2xl px-6 py-12 lg:py-16">
    <header class="mb-12">
      <h1 class="text-3xl font-semibold tracking-tight mb-4">Art</h1>
      <p class="text-muted-foreground">
        Creative works and artistic explorations.
      </p>
    </header>

    <div class="py-12 text-center">
      <p class="text-muted-foreground mb-8">
        Gallery coming soon.
      </p>
      <a 
        href="/journal"
        class="text-foreground hover:underline decoration-1 underline-offset-2"
      >
        ‚Üê Back to journal
      </a>
    </div>
  </div>
</BaseLayout>
