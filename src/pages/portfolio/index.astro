---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Card from '@/components/ui/Card.astro'
import CardContent from '@/components/ui/CardContent.astro'
---

<BaseLayout
  title="Portfolio - G√∂khan Turhan"
  description="Creative works, consulting services, writing projects, and technical development portfolio."
>
  <div class="container mx-auto px-4 py-12">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-6">Portfolio</h1>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        A collection of creative works, strategic consulting, written research, and technical projects
      </p>
    </div>

    <!-- Portfolio Cards -->
    <div class="grid gap-8 md:grid-cols-2 max-w-4xl mx-auto">
      <!-- Art -->
      <a href="/portfolio/art" class="group">
        <Card class="h-full transition-all duration-300 hover:shadow-lg hover:-translate-y-1 border-2 hover:border-primary/50">
          <CardContent class="p-8 text-center">
            <div class="mb-6">
              <div class="w-16 h-16 mx-auto bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center text-3xl">
                üé®
              </div>
            </div>
            <h2 class="text-2xl font-semibold mb-3 group-hover:text-primary transition-colors">Art</h2>
            <p class="text-muted-foreground mb-4">
              Conceptual art, digital installations, and creative explorations at the intersection of technology and philosophy
            </p>
            <div class="text-sm text-muted-foreground">
              <span class="inline-block bg-accent/50 px-3 py-1 rounded-full">Coming Soon</span>
            </div>
          </CardContent>
        </Card>
      </a>

      <!-- Consulting -->
      <a href="/portfolio/consulting" class="group">
        <Card class="h-full transition-all duration-300 hover:shadow-lg hover:-translate-y-1 border-2 hover:border-primary/50">
          <CardContent class="p-8 text-center">
            <div class="mb-6">
              <div class="w-16 h-16 mx-auto bg-gradient-to-br from-blue-500 to-indigo-500 rounded-full flex items-center justify-center text-3xl">
                üìä
              </div>
            </div>
            <h2 class="text-2xl font-semibold mb-3 group-hover:text-primary transition-colors">Consulting</h2>
            <p class="text-muted-foreground mb-4">
              Strategic innovation advisory, DevOps architecture, and business development for emerging tech ventures
            </p>
            <div class="text-sm text-muted-foreground">
              <span class="inline-block bg-accent/50 px-3 py-1 rounded-full">Services Available</span>
            </div>
          </CardContent>
        </Card>
      </a>

      <!-- Writing -->
      <a href="/portfolio/writing" class="group">
        <Card class="h-full transition-all duration-300 hover:shadow-lg hover:-translate-y-1 border-2 hover:border-primary/50">
          <CardContent class="p-8 text-center">
            <div class="mb-6">
              <div class="w-16 h-16 mx-auto bg-gradient-to-br from-green-500 to-emerald-500 rounded-full flex items-center justify-center text-3xl">
                ‚úçÔ∏è
              </div>
            </div>
            <h2 class="text-2xl font-semibold mb-3 group-hover:text-primary transition-colors">Writing</h2>
            <p class="text-muted-foreground mb-4">
              Research papers, philosophical essays, and analytical pieces on stablecoins, AGI, and systemic challenges
            </p>
            <div class="text-sm text-muted-foreground">
              <span class="inline-block bg-accent/50 px-3 py-1 rounded-full">In Progress</span>
            </div>
          </CardContent>
        </Card>
      </a>

      <!-- Projects -->
      <a href="/portfolio/projects" class="group">
        <Card class="h-full transition-all duration-300 hover:shadow-lg hover:-translate-y-1 border-2 hover:border-primary/50">
          <CardContent class="p-8 text-center">
            <div class="mb-6">
              <div class="w-16 h-16 mx-auto bg-gradient-to-br from-orange-500 to-red-500 rounded-full flex items-center justify-center text-3xl">
                üöÄ
              </div>
            </div>
            <h2 class="text-2xl font-semibold mb-3 group-hover:text-primary transition-colors">Projects</h2>
            <p class="text-muted-foreground mb-4">
              Technical projects, dashboards, and digital tools focused on finance, data visualization, and web development
            </p>
            <div class="text-sm text-muted-foreground">
              <span class="inline-block bg-primary/10 text-primary px-3 py-1 rounded-full">Active</span>
            </div>
          </CardContent>
        </Card>
      </a>
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-16">
      <p class="text-muted-foreground mb-6">
        Interested in collaborating or learning more about my work?
      </p>
      <div class="flex gap-4 justify-center">
        <a 
          href="/links" 
          class="inline-flex items-center px-6 py-3 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors font-medium"
        >
          Connect With Me
        </a>
        <a 
          href="/journal" 
          class="inline-flex items-center px-6 py-3 border border-input bg-background hover:bg-accent hover:text-accent-foreground rounded-md transition-colors font-medium"
        >
          Read My Journal
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
