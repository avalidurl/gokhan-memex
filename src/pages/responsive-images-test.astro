---
import BaseLayout from '../layouts/BaseLayout.astro';
import ResponsiveImage from '../components/ResponsiveImage.astro';
---

<BaseLayout 
  title="Responsive Images Test"
  description="Test page for responsive image functionality"
>
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Responsive Images Test</h1>
    
    <div class="space-y-12">
      <section>
        <h2 class="text-2xl font-semibold mb-4">Crypto Conceptualism Main Image</h2>
        <ResponsiveImage
          src="/blog/images/crypto-conceptualism-main.webp"
          alt="Crypto conceptualism main image test"
          width={1200}
          height={675}
          fetchpriority="high"
          loading="eager"
          class="w-full rounded-lg shadow-lg"
        />
      </section>
      
      <section>
        <h2 class="text-2xl font-semibold mb-4">This Week Writing NFTs Header</h2>
        <ResponsiveImage
          src="/blog/images/this-week-writing-nfts-7-header.webp"
          alt="This week writing NFTs header test"
          width={1200}
          height={675}
          class="w-full rounded-lg shadow-lg"
        />
      </section>
      
      <section>
        <h2 class="text-2xl font-semibold mb-4">Numogram Tweet (WebP)</h2>
        <ResponsiveImage
          src="/blog/images/numogram-tweet.webp"
          alt="Numogram tweet test"
          width={800}
          height={600}
          class="w-full max-w-2xl mx-auto rounded-lg shadow-lg"
        />
      </section>
    </div>
    
    <div class="mt-12 p-6 bg-gray-100 dark:bg-gray-800 rounded-lg">
      <h2 class="text-xl font-semibold mb-4">Implementation Details</h2>
      <ul class="space-y-2">
        <li>✅ Responsive srcset with 400w, 800w, 1200w variants</li>
        <li>✅ Modern WebP format with PNG/JPEG fallbacks</li>
        <li>✅ Lazy loading (except for above-fold images)</li>
        <li>✅ Proper sizes attribute for different breakpoints</li>
        <li>✅ Accessibility with descriptive alt text</li>
        <li>✅ Progressive enhancement with picture element</li>
      </ul>
    </div>
  </main>
</BaseLayout>