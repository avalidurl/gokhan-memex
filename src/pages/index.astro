---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Card from '@/components/ui/Card.astro'
import CardContent from '@/components/ui/CardContent.astro'
import { getCollection } from 'astro:content'

// Get featured interviews
const allPosts = await getCollection('blog')
const featuredInterviews = allPosts
  .filter(post => post.data.category === 'Interviews' && post.data.featured)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 2)

// If no featured interviews, get the most recent interviews
const interviews = featuredInterviews.length > 0 ? featuredInterviews : 
  allPosts
    .filter(post => post.data.category === 'Interviews')
    .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
    .slice(0, 2)
---

<BaseLayout 
  title="Gökhan Turhan"
  description="Strategic Innovation Architect exploring stablecoins, AGI, tokenization, and investment strategies. Turning global systemic challenges into high-leverage opportunities through technology and foresight."
>
  <div class="container max-w-4xl mx-auto px-4 py-12">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-6">
        Gökhan Turhan
      </h1>
      <h2 class="text-2xl md:text-3xl font-semibold tracking-tight">
        NOW
      </h2>

    </div>

    <!-- Main Content -->
    <div class="max-w-3xl mx-auto">
      <Card>
        <CardContent class="p-8 md:p-12">
          <div class="prose prose-lg prose-blue dark:prose-invert max-w-none">
            <ul class="text-lg leading-relaxed mb-8 space-y-3">
              <li>I am an ever-curious t-shaped generalist.</li>
              <li>I contribute to projects as either a technical product lead, or solution architect.</li>
              <li>Currently, I am nerd-sniped by stablecoins, DeFi supply chain mechanics, deep tech resolving global priorities.</li>
              <li>It goes without saying I am a Kardashev scale accelerationist and invested in AGI timelines superforecasting initiatives.</li>
              <li>You can contact me either via <a href="https://t.me/gigabvgatti" target="_blank" rel="noopener noreferrer" class="text-foreground font-medium hover:underline">Telegram</a> or <a href="mailto:info@gokhanturhan.com" class="text-foreground font-medium hover:underline">e-mail</a>.</li>
            </ul>

            <!-- Decorative Sun Symbol -->
            <div class="flex justify-center mt-8 mb-4">
              <svg viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-foreground opacity-60">
                <defs>
                  <!-- Radial gradient for the radiant effect -->
                  <radialGradient id="blackRadiance" cx="50%" cy="50%" r="60%">
                    <stop offset="0%" style="stop-color:currentColor;stop-opacity:1" />
                    <stop offset="40%" style="stop-color:currentColor;stop-opacity:0.8" />
                    <stop offset="70%" style="stop-color:currentColor;stop-opacity:0.4" />
                    <stop offset="90%" style="stop-color:currentColor;stop-opacity:0.2" />
                    <stop offset="100%" style="stop-color:currentColor;stop-opacity:0" />
                  </radialGradient>
                </defs>
                
                <!-- Outer radiance -->
                <circle cx="16" cy="16" r="15" fill="url(#blackRadiance)"/>
                
                <!-- Concentric circles for layered radiance -->
                <circle cx="16" cy="16" r="12" fill="currentColor" opacity="0.3"/>
                <circle cx="16" cy="16" r="9" fill="currentColor" opacity="0.6"/>
                <circle cx="16" cy="16" r="6.5" fill="currentColor" opacity="0.9"/>
                
                <!-- Central core -->
                <circle cx="16" cy="16" r="4.5" fill="currentColor"/>
              </svg>
            </div>

          </div>
        </CardContent>
      </Card>
    </div>

    <!-- Recent Projects -->
    <div class="mt-16 max-w-3xl mx-auto">
      <h2 class="text-2xl font-semibold mb-6 text-center">Recent Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <Card class="hover:shadow-lg transition-shadow">
          <CardContent class="p-6 flex flex-col h-full">
            <h3 class="text-xl font-semibold mb-3">NVIDIA vs Crypto Market Cap</h3>
            <p class="text-muted-foreground font-serif mb-4 flex-grow">
              Real-time comparison dashboard tracking NVIDIA stock market capitalization against total cryptocurrency market cap.
            </p>
            <div class="flex gap-3 mt-auto">
              <a 
                href="https://market-cap-tracker.vercel.app/"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-6 py-2.5 border border-foreground/15 bg-background text-foreground hover:bg-foreground/5 hover:border-foreground/25 transition-all duration-200 font-serif font-medium text-sm tracking-wide rounded"
              >
                View Dashboard →
              </a>
              <a 
                href="/projects/market-cap-tracker/"
                class="inline-flex items-center text-primary font-medium hover:underline"
              >
                Learn More
              </a>
            </div>
          </CardContent>
        </Card>

        <Card class="hover:shadow-lg transition-shadow">
          <CardContent class="p-6 flex flex-col h-full">
            <h3 class="text-xl font-semibold mb-3">SP100 Capex Dashboard</h3>
            <p class="text-muted-foreground font-serif mb-4 flex-grow">
              Interactive financial dashboard analyzing S&P 100 companies' capital expenditure trends over the past 10 years.
            </p>
            <div class="flex gap-3 mt-auto">
              <a 
                href="https://sp500-capex.vercel.app/"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-6 py-2.5 border border-foreground/15 bg-background text-foreground hover:bg-foreground/5 hover:border-foreground/25 transition-all duration-200 font-serif font-medium text-sm tracking-wide rounded"
              >
                View Dashboard →
              </a>
              <a 
                href="/projects/sp100-capex-dashboard/"
                class="inline-flex items-center text-primary font-medium hover:underline"
              >
                Learn More
              </a>
            </div>
          </CardContent>
        </Card>
      </div>
    </div>

    <!-- Featured Interviews -->
    {interviews.length > 0 && (
      <div class="mt-16 max-w-3xl mx-auto">
        <h2 class="text-2xl font-semibold mb-6 text-center">Featured Interviews</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {interviews.map((interview) => (
            <Card class="hover:shadow-lg transition-shadow">
              <CardContent class="p-6 flex flex-col h-full">
                <h3 class="text-xl font-semibold mb-3">{interview.data.title}</h3>
                <p class="text-muted-foreground font-serif mb-4 flex-grow">
                  {interview.data.description || 'Interview post'}
                </p>
                
                {interview.data.tags && interview.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {interview.data.tags.slice(0, 3).map((tag) => (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary/10 text-primary">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
                
                <div class="flex gap-3 mt-auto">
                  <a 
                    href={`/journal/${interview.slug}/`}
                    class="inline-flex items-center px-6 py-2.5 border border-foreground/15 bg-background text-foreground hover:bg-foreground/5 hover:border-foreground/25 transition-all duration-200 font-serif font-medium text-sm tracking-wide rounded"
                  >
                    Read Interview →
                  </a>
                </div>
              </CardContent>
            </Card>
          ))}
        </div>
      </div>
    )}
  </div>
</BaseLayout>