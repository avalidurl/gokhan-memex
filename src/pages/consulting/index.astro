---
import BaseLayout from '@/layouts/BaseLayout.astro'
---

<BaseLayout
  title="Consulting"
  description="Strategic innovation and technology advisory."
>
  <div class="mx-auto max-w-2xl px-6 py-12 lg:py-16">
    <header class="mb-12">
      <h1 class="text-3xl font-semibold tracking-tight mb-4">Consulting</h1>
      <p class="text-muted-foreground">
        Strategic innovation and technology advisory.
      </p>
    </header>

    <div class="space-y-12">
      <section>
        <h2 class="text-sm font-medium uppercase tracking-wider text-muted-foreground mb-4">
          Services
        </h2>
        <ul class="space-y-2 text-muted-foreground">
          <li>DevOps & Infrastructure Architecture</li>
          <li>Developer Relations Strategy</li>
          <li>Business Development</li>
          <li>Strategic Technology Advisory</li>
        </ul>
      </section>

      <section>
        <h2 class="text-sm font-medium uppercase tracking-wider text-muted-foreground mb-4">
          Contact
        </h2>
        <p class="mb-4">
          <a 
            href="mailto:info@gokhanturhan.com"
            class="text-foreground hover:underline decoration-1 underline-offset-2"
          >
            info@gokhanturhan.com
          </a>
        </p>
      </section>
    </div>
  </div>
</BaseLayout>
