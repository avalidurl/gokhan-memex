---
import BaseLayout from '@/layouts/BaseLayout.astro'

// Import links data
import linksData from '@/data/links.json'

const links = linksData
---

<BaseLayout
  title="Links"
  description="Connect with me across platforms - social, professional, and creative spaces."
>
  <div class="mx-auto max-w-2xl px-6 py-12 lg:py-16">
    <!-- Header -->
    <header class="mb-12">
      <h1 class="text-3xl font-semibold tracking-tight mb-4">Links</h1>
      <p class="text-muted-foreground">
        Find me across the internet.
      </p>
    </header>

    <div class="space-y-12">
      {links.map(section => (
        <section>
          <h2 class="text-sm font-medium uppercase tracking-wider text-muted-foreground mb-4">
            {section.category}
          </h2>
          <ul class="space-y-2">
            {section.items.map(link => (
              <li>
                <a 
                  href={link.url}
                  target={link.url.startsWith('/') ? '_self' : '_blank'}
                  rel={link.url.startsWith('/') ? '' : 'noopener'}
                  class="group flex items-baseline justify-between py-1"
                >
                  <span class="text-foreground group-hover:underline decoration-1 underline-offset-2">
                    {link.name}
                  </span>
                  {!link.url.startsWith('/') && (
                    <span class="text-sm text-muted-foreground">↗</span>
                  )}
                </a>
              </li>
            ))}
          </ul>
        </section>
      ))}

      <!-- Contact -->
      <section>
        <h2 class="text-sm font-medium uppercase tracking-wider text-muted-foreground mb-4">
          Contact
        </h2>
        <ul class="space-y-2">
          <li>
            <a 
              href="mailto:info@gokhanturhan.com"
              class="group flex items-baseline py-1"
            >
              <span class="text-foreground group-hover:underline decoration-1 underline-offset-2">
                info@gokhanturhan.com
              </span>
            </a>
          </li>
          <li>
            <a 
              href="https://t.me/ggoekhan"
              target="_blank"
              rel="noopener"
              class="group flex items-baseline justify-between py-1"
            >
              <span class="text-foreground group-hover:underline decoration-1 underline-offset-2">
                Telegram
              </span>
              <span class="text-sm text-muted-foreground">↗</span>
            </a>
          </li>
        </ul>
      </section>
    </div>
  </div>
</BaseLayout>
