---
import BaseLayout from '@/layouts/BaseLayout.astro'
---

<BaseLayout
  title="Subscribe"
  description="Stay updated with my latest research on stablecoins, AGI, investment strategies, and global systemic challenges."
>
  <div class="mx-auto max-w-2xl px-6 py-12 lg:py-16">
    <!-- Header -->
    <header class="mb-12">
      <h1 class="text-3xl font-semibold tracking-tight mb-4">Subscribe</h1>
      <p class="text-muted-foreground">
        Get my latest essays on stablecoins, tokenization, AGI, and emerging technologies delivered to your inbox.
      </p>
    </header>

    <div class="space-y-12">
      <!-- Newsletter Section -->
      <section>
        <h2 class="text-sm font-medium uppercase tracking-wider text-muted-foreground mb-6">
          Newsletter
        </h2>
        
        <form 
          id="subscribe-form"
          class="space-y-4"
        >
          <div class="flex flex-col sm:flex-row gap-3">
            <input
              type="email"
              name="email"
              id="email-input"
              placeholder="your@email.com"
              required
              autocomplete="email"
              class="flex-1 px-4 py-3 bg-background border border-border rounded-md text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-colors"
            />
            <button
              type="submit"
              id="submit-btn"
              class="px-6 py-3 bg-foreground text-background font-medium rounded-md hover:bg-foreground/90 transition-colors shrink-0 disabled:opacity-50 disabled:cursor-not-allowed"
            >
              Subscribe
            </button>
          </div>
          <p id="form-message" class="text-sm hidden"></p>
        </form>
        
        <p class="text-sm text-muted-foreground mt-4">
          Free, no spam. Unsubscribe anytime.
        </p>
      </section>

      <!-- RSS Section -->
      <section>
        <h2 class="text-sm font-medium uppercase tracking-wider text-muted-foreground mb-4">
          RSS Feed
        </h2>
        <p class="text-muted-foreground mb-4">
          Subscribe via RSS to get updates in your preferred reader.
        </p>
        <ul class="space-y-2">
          <li>
            <a 
              href="/rss.xml"
              class="group flex items-baseline justify-between py-1"
            >
              <span class="text-foreground group-hover:underline decoration-1 underline-offset-2">
                RSS Feed
              </span>
              <code class="text-xs text-muted-foreground bg-muted px-2 py-1 rounded">
                /rss.xml
              </code>
            </a>
          </li>
        </ul>
      </section>

      <!-- Social Section -->
      <section>
        <h2 class="text-sm font-medium uppercase tracking-wider text-muted-foreground mb-4">
          Elsewhere
        </h2>
        <ul class="space-y-2">
          <li>
            <a 
              href="https://x.com/goekhan"
              target="_blank"
              rel="noopener"
              class="group flex items-baseline justify-between py-1"
            >
              <span class="text-foreground group-hover:underline decoration-1 underline-offset-2">
                X (Twitter)
              </span>
              <span class="text-sm text-muted-foreground">↗</span>
            </a>
          </li>
          <li>
            <a 
              href="https://gokhan.substack.com"
              target="_blank"
              rel="noopener"
              class="group flex items-baseline justify-between py-1"
            >
              <span class="text-foreground group-hover:underline decoration-1 underline-offset-2">
                Substack
              </span>
              <span class="text-sm text-muted-foreground">↗</span>
            </a>
          </li>
          <li>
            <a 
              href="https://github.com/avalidurl"
              target="_blank"
              rel="noopener"
              class="group flex items-baseline justify-between py-1"
            >
              <span class="text-foreground group-hover:underline decoration-1 underline-offset-2">
                GitHub
              </span>
              <span class="text-sm text-muted-foreground">↗</span>
            </a>
          </li>
          <li>
            <a 
              href="https://linkedin.com/in/goekhanturhan"
              target="_blank"
              rel="noopener"
              class="group flex items-baseline justify-between py-1"
            >
              <span class="text-foreground group-hover:underline decoration-1 underline-offset-2">
                LinkedIn
              </span>
              <span class="text-sm text-muted-foreground">↗</span>
            </a>
          </li>
        </ul>
      </section>
    </div>

    <footer class="mt-12 pt-8 border-t border-border">
      <p class="text-sm text-muted-foreground">
        Your privacy matters. I don't share email addresses or use tracking beyond basic analytics.
      </p>
    </footer>
  </div>
</BaseLayout>

<script>
  const form = document.getElementById('subscribe-form') as HTMLFormElement;
  const emailInput = document.getElementById('email-input') as HTMLInputElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const messageEl = document.getElementById('form-message') as HTMLParagraphElement;

  function showMessage(text: string, isError: boolean = false) {
    messageEl.textContent = text;
    messageEl.className = `text-sm ${isError ? 'text-red-500' : 'text-green-600 dark:text-green-400'}`;
    messageEl.classList.remove('hidden');
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const email = emailInput.value.trim();
    if (!email) return;

    // Disable form while submitting
    submitBtn.disabled = true;
    submitBtn.textContent = 'Subscribing...';
    messageEl.classList.add('hidden');

    try {
      // Submit to Substack
      const response = await fetch('https://gokhan.substack.com/api/v1/free', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          email,
          first_url: window.location.href,
          first_referrer: document.referrer || '',
          current_url: window.location.href,
          current_referrer: document.referrer || '',
          referral_code: '',
          source: 'embed'
        }),
        mode: 'cors'
      });

      if (response.ok) {
        // Success - redirect to thank you page
        window.location.href = '/thank-you';
      } else {
        // If CORS fails or other error, still redirect (Substack may have processed it)
        // Substack's API often returns errors for CORS but still processes the subscription
        window.location.href = '/thank-you';
      }
    } catch (error) {
      // Network error or CORS issue - try fallback method
      // Open Substack subscribe page in same window as fallback
      const substackUrl = `https://gokhan.substack.com/subscribe?email=${encodeURIComponent(email)}&simple=true`;
      window.location.href = substackUrl;
    }
  });
</script>
