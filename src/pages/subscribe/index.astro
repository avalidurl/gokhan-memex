---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Card from '@/components/ui/Card.astro'
import CardContent from '@/components/ui/CardContent.astro'
import Button from '@/components/ui/Button.astro'
import { Rss, Mail } from 'lucide-astro'

const breadcrumbs: { label: string; href: string }[] = []
---

<BaseLayout
  title="Subscribe"
  description="Stay updated with my latest research on stablecoins, AGI, investment strategies, and global systemic challenges."
>
  <!-- Beehiiv Scripts -->
  <script type="text/javascript" async src="https://subscribe-forms.beehiiv.com/attribution.js"></script>
  <script async src="https://subscribe-forms.beehiiv.com/embed.js"></script>
  <div class="container max-w-4xl mx-auto px-4 py-8">
    <Breadcrumbs items={breadcrumbs} currentPage="Subscribe" />

    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-3xl md:text-4xl font-bold tracking-tight mb-4">Subscribe</h1>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        Stay updated with my latest research and insights on stablecoins, tokenization, 
        AGI timelines, investment strategies, and emerging technologies.
      </p>
    </div>

    <div class="grid grid-cols-1 gap-8 max-w-2xl mx-auto">
      <!-- Newsletter -->
      <Card class="hover:shadow-lg transition-shadow dark:bg-card dark:border-border">
        <CardContent class="p-8 text-center">
          <h3 class="text-2xl font-bold mb-2">G√∂khan Turhan's Newsletter</h3>
          <p class="text-muted-foreground mb-6">Concepts that Solve Problems</p>
          
          <form 
            action="https://subscribe-forms.beehiiv.com/98caca82-70ad-4979-a19d-dd8294282fe5" 
            method="post"
            class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto"
          >
            <input 
              type="email" 
              name="email" 
              placeholder="Enter your email" 
              required
              class="flex-1 px-4 py-3 border border-border rounded-md bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            >
            <button 
              type="submit"
              class="px-6 py-3 bg-foreground text-background rounded-md hover:bg-foreground/90 transition-colors font-medium"
            >
              Subscribe
            </button>
          </form>
        </CardContent>
      </Card>

      <!-- RSS Feed -->
      <Card class="hover:shadow-lg transition-shadow">
        <CardContent class="p-8 text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-6">
            <Rss class="w-8 h-8 text-primary" />
          </div>
          
          <h2 class="text-2xl font-semibold mb-4">RSS Feed</h2>
          <p class="text-muted-foreground mb-6 leading-relaxed">
            Subscribe to my RSS feed to get updates directly in your preferred RSS reader. 
            Perfect for staying updated without social media noise.
          </p>
          
          <div class="space-y-4">
            <Button class="w-full">
              <a href="/rss.xml" class="flex items-center justify-center space-x-2">
                <Rss class="w-4 h-4" />
                <span>Subscribe to RSS</span>
              </a>
            </Button>
            
            <p class="text-xs text-muted-foreground">
              Copy this URL: <code class="bg-accent px-2 py-1 rounded text-xs">https://gokhanturhan.com/rss.xml</code>
            </p>
          </div>
        </CardContent>
      </Card>
    </div>

    <!-- Additional Options -->
    <div class="mt-12">
      <Card>
        <CardContent class="p-8">
          <h3 class="text-xl font-semibold mb-6 text-center">Other Ways to Follow</h3>
          
          <div class="flex justify-center gap-4">
            <a 
              href="https://x.com/0xgokhan" 
              target="_blank" 
              rel="noopener noreferrer"
              class="w-12 h-12 bg-black rounded-full flex items-center justify-center hover:scale-110 transition-transform"
            >
              <span class="text-white font-bold text-lg">ùïè</span>
            </a>

            <a 
              href="https://github.com/avalidurl" 
              target="_blank" 
              rel="noopener noreferrer"
              class="w-12 h-12 bg-gray-900 rounded-full flex items-center justify-center hover:scale-110 transition-transform"
            >
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 0C5.374 0 0 5.373 0 12 0 17.302 3.438 21.8 8.207 23.387c.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0 1 12 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>

            <a 
              href="https://linkedin.com/in/goekhanturhan" 
              target="_blank" 
              rel="noopener noreferrer"
              class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center hover:scale-110 transition-transform"
            >
              <span class="text-white font-bold text-sm">in</span>
            </a>
          </div>
        </CardContent>
      </Card>
    </div>

    <!-- Privacy Note -->
    <div class="mt-8 text-center">
      <p class="text-sm text-muted-foreground max-w-2xl mx-auto">
        Your privacy matters. RSS feeds don't track you, and newsletter subscriptions 
        are managed through Substack with their privacy policies. I don't share 
        email addresses or use tracking beyond basic analytics.
      </p>
    </div>
  </div>
</BaseLayout>